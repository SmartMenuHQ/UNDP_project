<% content_for :title, "Assessment - #{@assessment.title}" %>

<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

    <!-- Header -->
    <div class="bg-white shadow rounded-lg mb-6">
      <div class="p-6">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-2xl font-bold text-gray-900"><%= @assessment.title %></h1>
            <p class="text-gray-600 mt-1">
              <%= @assessment.description.present? ? @assessment.description : "No description provided" %>
            </p>
            <div class="mt-3">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @assessment.status_color == 'green' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                <%= @assessment.status %>
              </span>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 ml-2">
                <%= @assessment.total_sections %> Section<%= @assessment.total_sections != 1 ? 's' : '' %>
              </span>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 ml-2">
                <%= @assessment.total_questions %> Question<%= @assessment.total_questions != 1 ? 's' : '' %>
              </span>
            </div>
          </div>
          <div class="flex items-center space-x-3">
            <%= link_to preview_assessment_path(@assessment),
                class: "bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-md text-sm font-medium",
                target: "_blank" do %>
              <i class="fas fa-eye mr-2"></i>
              Preview
            <% end %>
            <%= link_to edit_assessment_path(@assessment),
                class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium" do %>
              <i class="fas fa-edit mr-2"></i>
              Edit
            <% end %>
            <%= link_to assessments_path,
                class: "bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-md text-sm font-medium" do %>
              <i class="fas fa-arrow-left mr-2"></i>
              Back
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white shadow rounded-lg mb-6">
      <div class="p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Assessment Management</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50">
            <%= link_to assessment_response_sessions_path(@assessment),
                class: "block" do %>
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <i class="fas fa-users text-indigo-600 text-xl"></i>
                </div>
                <div class="ml-3">
                  <h4 class="text-sm font-medium text-gray-900">Response Sessions</h4>
                  <p class="text-sm text-gray-500">Manage assessment responses</p>
                </div>
              </div>
            <% end %>
          </div>

          <div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50">
            <%= link_to assessment_marking_schemes_path(@assessment),
                class: "block" do %>
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <i class="fas fa-award text-orange-600 text-xl"></i>
                </div>
                <div class="ml-3">
                  <h4 class="text-sm font-medium text-gray-900">Marking Schemes</h4>
                  <p class="text-sm text-gray-500">Configure scoring rules</p>
                </div>
              </div>
            <% end %>
          </div>

          <div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50">
            <%= link_to analytics_assessment_response_sessions_path(@assessment),
                class: "block" do %>
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <i class="fas fa-chart-bar text-teal-600 text-xl"></i>
                </div>
                <div class="ml-3">
                  <h4 class="text-sm font-medium text-gray-900">Analytics</h4>
                  <p class="text-sm text-gray-500">View response analytics</p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Assessment Overview -->
    <div class="bg-white shadow rounded-lg mb-6">
      <div class="p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Assessment Overview</h3>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <div class="text-center">
            <div class="text-2xl font-bold text-blue-600">
              <%= @assessment.total_sections %>
            </div>
            <div class="text-sm text-gray-500">Sections</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-green-600">
              <%= @assessment.total_questions %>
            </div>
            <div class="text-sm text-gray-500">Questions</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-purple-600">
              <%= @assessment.status %>
            </div>
            <div class="text-sm text-gray-500">Status</div>
          </div>
          <div class="text-center">
            <div class="text-sm font-medium text-gray-600">
              <%= @assessment.formatted_created_at %>
            </div>
            <div class="text-sm text-gray-500">Created</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Assessment Sections -->
    <div class="space-y-6">
      <% if @sections.any? %>
        <% @sections.each_with_index do |section, section_index| %>
          <div class="bg-white shadow rounded-lg">
            <div class="p-6">
              <!-- Section Header -->
              <div class="flex items-center justify-between mb-6">
                <div class="flex items-center space-x-3">
                  <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                    <span class="text-sm font-medium text-blue-600"><%= section_index + 1 %></span>
                  </div>
                  <div>
                    <h3 class="text-lg font-medium text-gray-900"><%= section.display_name %></h3>
                    <p class="text-sm text-gray-500">
                      <%= section.total_questions %> question<%= section.total_questions != 1 ? 's' : '' %>
                    </p>
                  </div>
                </div>
              </div>

              <!-- Questions -->
              <% if section.assessment_questions.any? %>
                <div class="space-y-4">
                  <% section.assessment_questions.ordered.each_with_index do |question, question_index| %>
                    <div class="border border-gray-200 rounded-lg p-4 bg-gray-50">
                      <div class="flex items-start space-x-3">
                        <div class="flex-shrink-0 w-8 h-8 bg-gray-200 rounded-full flex items-center justify-center">
                          <span class="text-xs font-medium text-gray-600">
                            <%= question_index + 1 %>
                          </span>
                        </div>
                        <div class="flex-1 min-w-0">
                          <div class="flex items-center justify-between mb-2">
                            <h4 class="text-sm font-medium text-gray-900">
                              <%= question.text %>
                              <% if question.is_required? %>
                                <span class="text-red-500 ml-1">*</span>
                              <% end %>
                            </h4>
                            <div class="flex items-center space-x-2">
                              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                <%= question.question_type_name %>
                              </span>
                              <% if question.is_required? %>
                                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                  Required
                                </span>
                              <% end %>
                            </div>
                          </div>

                          <!-- Show options for multiple choice questions -->
                          <% if question.respond_to?(:assessment_question_options) && question.assessment_question_options.any? %>
                            <div class="mt-3">
                              <p class="text-xs text-gray-500 mb-2">Options:</p>
                              <div class="space-y-1">
                                <% question.assessment_question_options.ordered.each do |option| %>
                                  <div class="flex items-center space-x-2 text-sm">
                                    <% if option.is_correct_answer? %>
                                      <i class="fas fa-check-circle text-green-500 text-xs"></i>
                                    <% else %>
                                      <i class="far fa-circle text-gray-400 text-xs"></i>
                                    <% end %>
                                    <span class="<%= option.is_correct_answer? ? 'text-green-700 font-medium' : 'text-gray-700' %>">
                                      <%= option.text %>
                                    </span>
                                    <% if option.has_assigned_points? %>
                                      <span class="inline-flex items-center px-1.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                        <%= option.points > 0 ? '+' : '' %><%= option.points %> pts
                                      </span>
                                    <% end %>
                                  </div>
                                <% end %>
                              </div>
                            </div>
                          <% end %>

                          <!-- Show question metadata if available -->
                          <% if question.meta_data.present? && question.meta_data.any? %>
                            <div class="mt-2 text-xs text-gray-500">
                              <% question.meta_data.each do |key, value| %>
                                <span class="inline-block mr-4">
                                  <strong><%= key.humanize %>:</strong> <%= value %>
                                </span>
                              <% end %>
                            </div>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <div class="text-center py-8 text-gray-500">
                  <i class="fas fa-question-circle text-2xl mb-2"></i>
                  <p>No questions in this section</p>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      <% else %>
        <!-- Empty State -->
        <div class="bg-white shadow rounded-lg">
          <div class="text-center py-12">
            <div class="mx-auto w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mb-6">
              <i class="fas fa-clipboard-list text-gray-400 text-3xl"></i>
            </div>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No sections created</h3>
            <p class="text-gray-600 mb-6">This assessment doesn't have any sections yet.</p>
            <%= link_to edit_assessment_path(@assessment),
                class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg text-sm font-medium transition-colors inline-flex items-center space-x-2" do %>
              <i class="fas fa-plus"></i>
              <span>Add Sections</span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>
