<% content_for :title, "Create New Assessment" %>

<div class="max-w-2xl mx-auto">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Create New Assessment</h1>
    <p class="text-gray-600 mt-2">Start by giving your assessment a title and description</p>
  </div>

  <%= form_with(model: @assessment, local: true, class: "space-y-6") do |form| %>
    <div class="bg-white shadow-md rounded-lg p-6">
      <% if @assessment.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-6">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                Please fix the following errors:
              </h3>
              <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                <% @assessment.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <div class="space-y-6">
        <!-- Title Field -->
        <div>
          <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :title,
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{@assessment.errors[:title].any? ? 'border-red-300' : ''}",
              placeholder: "Enter assessment title..." %>
          <% if @assessment.errors[:title].any? %>
            <p class="mt-1 text-sm text-red-600"><%= @assessment.errors[:title].first %></p>
          <% end %>
        </div>

        <!-- Description Field -->
        <div>
          <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_area :description,
              rows: 4,
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{@assessment.errors[:description].any? ? 'border-red-300' : ''}",
              placeholder: "Enter assessment description (optional)..." %>
          <% if @assessment.errors[:description].any? %>
            <p class="mt-1 text-sm text-red-600"><%= @assessment.errors[:description].first %></p>
          <% end %>
          <p class="mt-1 text-sm text-gray-500">This will be shown to respondents before they start the assessment.</p>
        </div>

        <!-- Status Field -->
        <div>
          <%= form.label :active, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="flex items-center space-x-4">
            <label class="flex items-center">
              <%= form.radio_button :active, true, class: "mr-2 text-blue-600" %>
              <span class="text-sm text-gray-700">Active - Ready for responses</span>
            </label>
            <label class="flex items-center">
              <%= form.radio_button :active, false, class: "mr-2 text-blue-600" %>
              <span class="text-sm text-gray-700">Draft - Not yet ready</span>
            </label>
          </div>
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex justify-between items-center">
      <%= link_to "Cancel", assessments_path,
          class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" %>

      <div class="flex space-x-3">
        <%= form.submit "Create Assessment",
            class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-md text-sm font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    </div>
  <% end %>

  <!-- Help Text -->
  <div class="mt-8 bg-blue-50 border border-blue-200 rounded-md p-4">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-blue-800">What happens next?</h3>
        <div class="mt-2 text-sm text-blue-700">
          <p>After creating your assessment, you'll be taken to the editor where you can add sections and questions. You can always come back to edit the title and description later.</p>
        </div>
      </div>
    </div>
  </div>
</div>
