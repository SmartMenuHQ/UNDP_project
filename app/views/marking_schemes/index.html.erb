<div class="bg-white shadow rounded-lg">
  <div class="px-6 py-4 border-b border-gray-200">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Marking Schemes</h1>
        <p class="text-sm text-gray-600">Manage marking schemes for <%= @assessment.title %></p>
      </div>
      <div class="flex space-x-3">
        <%= link_to "Back to Assessment", assessment_path(@assessment),
            class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to "New Marking Scheme", new_assessment_marking_scheme_path(@assessment),
            class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    </div>
  </div>

  <!-- Active Scheme Alert -->
  <% if @active_scheme %>
    <div class="px-6 py-3 bg-green-50 border-b border-green-200">
      <div class="flex items-center">
        <i class="fas fa-check-circle text-green-600 mr-2"></i>
        <span class="text-green-800 font-medium">
          Active Scheme: <%= @active_scheme.name %>
        </span>
        <span class="ml-2 text-green-600 text-sm">
          (Total: <%= @active_scheme.total_possible_score %> points)
        </span>
      </div>
    </div>
  <% else %>
    <div class="px-6 py-3 bg-yellow-50 border-b border-yellow-200">
      <div class="flex items-center">
        <i class="fas fa-exclamation-triangle text-yellow-600 mr-2"></i>
        <span class="text-yellow-800 font-medium">
          No active marking scheme. Create and activate one to enable automatic marking.
        </span>
      </div>
    </div>
  <% end %>

  <!-- Marking Schemes List -->
  <div class="px-6 py-4">
    <% if @marking_schemes.any? %>
      <div class="space-y-4">
        <% @marking_schemes.each do |scheme| %>
          <div class="border border-gray-200 rounded-lg p-6 <%= scheme.is_active? ? 'bg-green-50 border-green-200' : 'bg-white' %>">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <div class="flex items-center">
                  <h3 class="text-lg font-semibold text-gray-900">
                    <%= scheme.name %>
                  </h3>
                  <% if scheme.is_active? %>
                    <span class="ml-3 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      <i class="fas fa-star mr-1"></i>
                      Active
                    </span>
                  <% end %>
                </div>

                <% if scheme.description.present? %>
                  <p class="text-gray-600 mt-2"><%= scheme.description %></p>
                <% end %>

                <div class="mt-4 grid grid-cols-1 md:grid-cols-3 gap-4">
                  <div class="bg-white p-3 rounded border">
                    <div class="text-2xl font-bold text-blue-600"><%= scheme.total_possible_score.to_i %></div>
                    <div class="text-sm text-gray-600">Total Points</div>
                  </div>
                  <div class="bg-white p-3 rounded border">
                    <div class="text-2xl font-bold text-green-600"><%= scheme.assessment_question_marking_rules.count %></div>
                    <div class="text-sm text-gray-600">Rules Defined</div>
                  </div>
                  <div class="bg-white p-3 rounded border">
                    <div class="text-2xl font-bold text-purple-600">
                      <%= scheme.settings&.dig('passing_score')&.to_i || 60 %>%
                    </div>
                    <div class="text-sm text-gray-600">Passing Score</div>
                  </div>
                </div>

                <% if scheme.settings&.dig('grade_boundaries').present? %>
                  <div class="mt-4">
                    <h4 class="text-sm font-medium text-gray-700 mb-2">Grade Boundaries:</h4>
                    <div class="flex flex-wrap gap-2">
                      <% scheme.settings['grade_boundaries'].each do |grade, threshold| %>
                        <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-gray-100 text-gray-800">
                          <%= grade %>: <%= threshold %>%+
                        </span>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>

              <div class="ml-6 flex flex-col space-y-2">
                <%= link_to "View Details", assessment_marking_scheme_path(@assessment, scheme),
                    class: "text-blue-600 hover:text-blue-900 text-sm font-medium" %>

                <%= link_to "Manage Rules", assessment_marking_scheme_marking_rules_path(@assessment, scheme),
                    class: "text-green-600 hover:text-green-900 text-sm font-medium" %>

                <%= link_to "Edit", edit_assessment_marking_scheme_path(@assessment, scheme),
                    class: "text-indigo-600 hover:text-indigo-900 text-sm font-medium" %>

                <% unless scheme.is_active? %>
                  <%= link_to "Activate", activate_assessment_marking_scheme_path(@assessment, scheme),
                      method: :patch,
                      class: "text-green-600 hover:text-green-900 text-sm font-medium",
                      confirm: "This will deactivate the current active scheme. Continue?" %>
                <% else %>
                  <%= link_to "Deactivate", deactivate_assessment_marking_scheme_path(@assessment, scheme),
                      method: :patch,
                      class: "text-yellow-600 hover:text-yellow-900 text-sm font-medium",
                      confirm: "This will disable automatic marking. Continue?" %>
                <% end %>

                <%= link_to "Duplicate", duplicate_assessment_marking_scheme_path(@assessment, scheme),
                    method: :post,
                    class: "text-purple-600 hover:text-purple-900 text-sm font-medium" %>

                <%= link_to "Delete", assessment_marking_scheme_path(@assessment, scheme),
                    method: :delete,
                    class: "text-red-600 hover:text-red-900 text-sm font-medium",
                    confirm: "Are you sure? This will delete all associated marking rules." %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <div class="mx-auto w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mb-6">
          <i class="fas fa-award text-gray-400 text-3xl"></i>
        </div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No marking schemes yet</h3>
        <p class="text-gray-600 mb-6">Create your first marking scheme to enable automatic scoring</p>
        <%= link_to "Create Marking Scheme", new_assessment_marking_scheme_path(@assessment),
            class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg text-sm font-medium transition-colors inline-flex items-center space-x-2" %>
      </div>
    <% end %>
  </div>
</div>
