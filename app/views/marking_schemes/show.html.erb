<div class="bg-white shadow rounded-lg">
  <div class="px-6 py-4 border-b border-gray-200">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold text-gray-900"><%= @marking_scheme.name %></h1>
        <p class="text-sm text-gray-600">Marking scheme for <%= @assessment.title %></p>
      </div>
      <div class="flex space-x-3">
        <%= link_to "Back to Schemes", assessment_marking_schemes_path(@assessment),
            class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to "Edit", edit_assessment_marking_scheme_path(@assessment, @marking_scheme),
            class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to "Manage Rules", assessment_marking_scheme_marking_rules_path(@assessment, @marking_scheme),
            class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    </div>
  </div>

  <!-- Status Banner -->
  <% if @marking_scheme.is_active? %>
    <div class="px-6 py-3 bg-green-50 border-b border-green-200">
      <div class="flex items-center">
        <i class="fas fa-star text-green-600 mr-2"></i>
        <span class="text-green-800 font-medium">This is the active marking scheme</span>
      </div>
    </div>
  <% else %>
    <div class="px-6 py-3 bg-gray-50 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <span class="text-gray-600">This marking scheme is inactive</span>
        <%= link_to "Activate", activate_assessment_marking_scheme_path(@assessment, @marking_scheme),
            method: :patch,
            class: "text-green-600 hover:text-green-900 font-medium",
            confirm: "This will deactivate the current active scheme. Continue?" %>
      </div>
    </div>
  <% end %>

  <!-- Overview Statistics -->
  <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
      <div class="bg-white p-4 rounded-lg shadow text-center">
        <div class="text-3xl font-bold text-blue-600"><%= @total_possible_score %></div>
        <div class="text-sm text-gray-600">Total Possible Points</div>
      </div>
      <div class="bg-white p-4 rounded-lg shadow text-center">
        <div class="text-3xl font-bold text-green-600"><%= @marking_rules.count %></div>
        <div class="text-sm text-gray-600">Marking Rules</div>
      </div>
      <div class="bg-white p-4 rounded-lg shadow text-center">
        <div class="text-3xl font-bold text-purple-600">
          <%= @marking_scheme.settings&.dig('passing_score')&.to_i || 60 %>%
        </div>
        <div class="text-sm text-gray-600">Passing Score</div>
      </div>
      <div class="bg-white p-4 rounded-lg shadow text-center">
        <div class="text-3xl font-bold text-orange-600">
          <%= @assessment.assessment_questions.count %>
        </div>
        <div class="text-sm text-gray-600">Total Questions</div>
      </div>
    </div>
  </div>

  <!-- Scheme Details -->
  <div class="px-6 py-4 border-b border-gray-200">
    <h2 class="text-lg font-medium text-gray-900 mb-4">Scheme Details</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <dl class="space-y-3">
          <div>
            <dt class="text-sm font-medium text-gray-500">Name</dt>
            <dd class="text-sm text-gray-900"><%= @marking_scheme.name %></dd>
          </div>
          <% if @marking_scheme.description.present? %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Description</dt>
              <dd class="text-sm text-gray-900"><%= @marking_scheme.description %></dd>
            </div>
          <% end %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Total Possible Score</dt>
            <dd class="text-sm text-gray-900"><%= @marking_scheme.total_possible_score %> points</dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Status</dt>
            <dd class="text-sm text-gray-900">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                         <%= @marking_scheme.is_active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                <%= @marking_scheme.is_active? ? 'Active' : 'Inactive' %>
              </span>
            </dd>
          </div>
        </dl>
      </div>

      <div>
        <dl class="space-y-3">
          <div>
            <dt class="text-sm font-medium text-gray-500">Created</dt>
            <dd class="text-sm text-gray-900"><%= @marking_scheme.created_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Last Updated</dt>
            <dd class="text-sm text-gray-900"><%= @marking_scheme.updated_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Passing Score</dt>
            <dd class="text-sm text-gray-900">
              <%= @marking_scheme.settings&.dig('passing_score') || 60 %>%
              (<%= (@marking_scheme.total_possible_score * ((@marking_scheme.settings&.dig('passing_score') || 60) / 100.0)).round(1) %> points)
            </dd>
          </div>
        </dl>
      </div>
    </div>
  </div>

  <!-- Grade Boundaries -->
  <% if @marking_scheme.settings&.dig('grade_boundaries').present? %>
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Grade Boundaries</h2>
      <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
        <% @marking_scheme.settings['grade_boundaries'].each do |grade, threshold| %>
          <div class="bg-gray-50 p-4 rounded-lg text-center">
            <div class="text-2xl font-bold text-gray-900"><%= grade %></div>
            <div class="text-sm text-gray-600"><%= threshold %>% and above</div>
            <div class="text-xs text-gray-500 mt-1">
              <%= ((@marking_scheme.total_possible_score * threshold) / 100.0).round(1) %>+ points
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Marking Rules -->
  <div class="px-6 py-4 border-b border-gray-200">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-lg font-medium text-gray-900">Marking Rules</h2>
      <div class="flex space-x-2">
        <%= link_to "Add Rule", new_assessment_marking_scheme_marking_rule_path(@assessment, @marking_scheme),
            class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded text-sm" %>
        <% if @marking_rules.empty? %>
          <%= link_to "Auto-Create Rules", bulk_create_assessment_marking_scheme_marking_rules_path(@assessment, @marking_scheme),
              method: :post,
              class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded text-sm",
              confirm: "This will create default marking rules for all questions. Continue?" %>
        <% end %>
      </div>
    </div>

    <% if @marking_rules.any? %>
      <div class="space-y-4">
        <% @marking_rules.each do |rule| %>
          <div class="border border-gray-200 rounded-lg p-4 <%= rule.is_active? ? 'bg-white' : 'bg-gray-50' %>">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <div class="flex items-center">
                  <h3 class="text-md font-medium text-gray-900">
                    Question: <%= truncate(strip_tags(rule.assessment_question.text), length: 60) %>
                  </h3>
                  <% unless rule.is_active? %>
                    <span class="ml-2 inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                      Inactive
                    </span>
                  <% end %>
                </div>

                <div class="mt-2 grid grid-cols-1 md:grid-cols-3 gap-4">
                  <div>
                    <div class="text-sm text-gray-500">Rule Type</div>
                    <div class="text-sm font-medium text-gray-900">
                      <%= rule.rule_type.humanize %>
                    </div>
                  </div>
                  <div>
                    <div class="text-sm text-gray-500">Points</div>
                    <div class="text-sm font-medium text-gray-900">
                      <%= rule.points %> points
                    </div>
                  </div>
                  <div>
                    <div class="text-sm text-gray-500">Order</div>
                    <div class="text-sm font-medium text-gray-900">
                      #<%= rule.order %>
                    </div>
                  </div>
                </div>

                <% if rule.criteria.present? && rule.criteria.any? %>
                  <div class="mt-3">
                    <div class="text-sm text-gray-500 mb-1">Criteria:</div>
                    <div class="flex flex-wrap gap-2">
                      <% rule.criteria.each do |key, value| %>
                        <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-blue-100 text-blue-800">
                          <%= key.humanize %>: <%= value %>
                        </span>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>

              <div class="ml-4 flex flex-col space-y-1">
                <%= link_to "Edit", edit_assessment_marking_scheme_marking_rule_path(@assessment, @marking_scheme, rule),
                    class: "text-blue-600 hover:text-blue-900 text-sm font-medium" %>
                <%= link_to "Delete", assessment_marking_scheme_marking_rule_path(@assessment, @marking_scheme, rule),
                    method: :delete,
                    class: "text-red-600 hover:text-red-900 text-sm font-medium",
                    confirm: "Are you sure?" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-8">
        <div class="mx-auto w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mb-4">
          <i class="fas fa-ruler text-gray-400 text-2xl"></i>
        </div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No marking rules defined</h3>
        <p class="text-gray-600 mb-4">Create marking rules to define how each question should be scored</p>
        <div class="flex justify-center space-x-3">
          <%= link_to "Add First Rule", new_assessment_marking_scheme_marking_rule_path(@assessment, @marking_scheme),
              class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium" %>
          <%= link_to "Auto-Create All Rules", bulk_create_assessment_marking_scheme_marking_rules_path(@assessment, @marking_scheme),
              method: :post,
              class: "bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg text-sm font-medium",
              confirm: "This will create default marking rules for all questions. Continue?" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Feedback Templates -->
  <% if @marking_scheme.settings&.dig('feedback_templates').present? %>
    <div class="px-6 py-4">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Feedback Templates</h2>
      <div class="space-y-3">
        <% @marking_scheme.settings['feedback_templates'].each do |grade, template| %>
          <div class="bg-gray-50 p-4 rounded-lg">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  Grade <%= grade %>
                </span>
              </div>
              <div class="ml-3 flex-1">
                <p class="text-sm text-gray-900"><%= template %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
