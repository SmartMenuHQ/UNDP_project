<div class="bg-white shadow rounded-lg">
  <div class="px-6 py-4 border-b border-gray-200">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Marking Rules</h1>
        <p class="text-sm text-gray-600">
          Manage marking rules for "<%= @marking_scheme.name %>" in <%= @assessment.title %>
        </p>
      </div>
      <div class="flex space-x-3">
        <%= link_to "Back to Scheme", assessment_marking_scheme_path(@assessment, @marking_scheme),
            class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to "New Rule", new_assessment_marking_scheme_marking_rule_path(@assessment, @marking_scheme),
            class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="px-6 py-3 bg-gray-50 border-b border-gray-200">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-4">
        <span class="text-sm text-gray-600">
          <%= @marking_rules.count %> rules defined for <%= @assessment.assessment_questions.count %> questions
        </span>
        <% if @questions_without_rules.any? %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
            <%= @questions_without_rules.count %> questions missing rules
          </span>
        <% end %>
      </div>
      <div class="flex space-x-2">
        <% if @questions_without_rules.any? %>
          <%= link_to "Auto-Create Missing Rules", bulk_create_assessment_marking_scheme_marking_rules_path(@assessment, @marking_scheme),
              method: :post,
              class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-3 rounded text-sm",
              confirm: "This will create default marking rules for #{@questions_without_rules.count} questions. Continue?" %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Marking Rules List -->
  <div class="px-6 py-4">
    <% if @marking_rules.any? %>
      <div class="space-y-4">
        <% @marking_rules.each do |rule| %>
          <div class="border border-gray-200 rounded-lg p-6 <%= rule.is_active? ? 'bg-white' : 'bg-gray-50' %>">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <div class="flex items-center justify-between mb-3">
                  <div class="flex items-center">
                    <h3 class="text-lg font-medium text-gray-900">
                      Question #<%= rule.assessment_question.order %>
                    </h3>
                    <% unless rule.is_active? %>
                      <span class="ml-3 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                        Inactive
                      </span>
                    <% end %>
                  </div>
                  <div class="flex items-center space-x-2">
                    <%= link_to "↑", move_up_assessment_marking_scheme_marking_rule_path(@assessment, @marking_scheme, rule),
                        method: :patch,
                        class: "text-gray-400 hover:text-gray-600 p-1",
                        title: "Move up" %>
                    <%= link_to "↓", move_down_assessment_marking_scheme_marking_rule_path(@assessment, @marking_scheme, rule),
                        method: :patch,
                        class: "text-gray-400 hover:text-gray-600 p-1",
                        title: "Move down" %>
                  </div>
                </div>

                <div class="mb-3">
                  <p class="text-sm text-gray-600">
                    <%= truncate(strip_tags(rule.assessment_question.text), length: 100) %>
                  </p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                  <div class="bg-gray-50 p-3 rounded">
                    <div class="text-xs text-gray-500 mb-1">Question Type</div>
                    <div class="text-sm font-medium text-gray-900">
                      <%= rule.assessment_question.question_type_name %>
                      <% if rule.assessment_question.sub_type.present? %>
                        <span class="text-gray-500">(<%= rule.assessment_question.sub_type_name %>)</span>
                      <% end %>
                    </div>
                  </div>

                  <div class="bg-gray-50 p-3 rounded">
                    <div class="text-xs text-gray-500 mb-1">Rule Type</div>
                    <div class="text-sm font-medium text-gray-900">
                      <%= rule.rule_type.humanize %>
                    </div>
                  </div>

                  <div class="bg-gray-50 p-3 rounded">
                    <div class="text-xs text-gray-500 mb-1">Points</div>
                    <div class="text-sm font-medium text-gray-900">
                      <%= rule.points %> points
                    </div>
                  </div>

                  <div class="bg-gray-50 p-3 rounded">
                    <div class="text-xs text-gray-500 mb-1">Order</div>
                    <div class="text-sm font-medium text-gray-900">
                      #<%= rule.order %>
                    </div>
                  </div>
                </div>

                <% if rule.criteria.present? && rule.criteria.any? %>
                  <div class="mt-4">
                    <div class="text-xs text-gray-500 mb-2">Rule Criteria:</div>
                    <div class="flex flex-wrap gap-2">
                      <% rule.criteria.each do |key, value| %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                          <%= key.humanize %>:
                          <% if value.is_a?(Array) %>
                            <%= value.join(', ') %>
                          <% else %>
                            <%= value %>
                          <% end %>
                        </span>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>

              <div class="ml-6 flex flex-col space-y-2">
                <%= link_to "Edit", edit_assessment_marking_scheme_marking_rule_path(@assessment, @marking_scheme, rule),
                    class: "text-blue-600 hover:text-blue-900 text-sm font-medium" %>

                <%= link_to "Delete", assessment_marking_scheme_marking_rule_path(@assessment, @marking_scheme, rule),
                    method: :delete,
                    class: "text-red-600 hover:text-red-900 text-sm font-medium",
                    confirm: "Are you sure you want to delete this marking rule?" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <div class="mx-auto w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mb-6">
          <i class="fas fa-ruler text-gray-400 text-3xl"></i>
        </div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No marking rules defined</h3>
        <p class="text-gray-600 mb-6">Create marking rules to define how each question should be scored</p>
        <div class="flex justify-center space-x-3">
          <%= link_to "Add First Rule", new_assessment_marking_scheme_marking_rule_path(@assessment, @marking_scheme),
              class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg text-sm font-medium" %>
          <% if @assessment.assessment_questions.any? %>
            <%= link_to "Auto-Create All Rules", bulk_create_assessment_marking_scheme_marking_rules_path(@assessment, @marking_scheme),
                method: :post,
                class: "bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-lg text-sm font-medium",
                confirm: "This will create default marking rules for all #{@assessment.assessment_questions.count} questions. Continue?" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Questions Without Rules -->
  <% if @questions_without_rules.any? %>
    <div class="px-6 py-4 border-t border-gray-200 bg-yellow-50">
      <h3 class="text-md font-medium text-yellow-800 mb-3">
        Questions Missing Marking Rules (<%= @questions_without_rules.count %>)
      </h3>
      <div class="space-y-2">
        <% @questions_without_rules.each do |question| %>
          <div class="flex items-center justify-between bg-white p-3 rounded border border-yellow-200">
            <div>
              <div class="text-sm font-medium text-gray-900">
                Question #<%= question.order %>: <%= truncate(strip_tags(question.text), length: 60) %>
              </div>
              <div class="text-xs text-gray-500">
                Type: <%= question.question_type_name %>
                <% if question.sub_type.present? %>
                  (<%= question.sub_type_name %>)
                <% end %>
              </div>
            </div>
            <div class="flex space-x-2">
              <%= link_to "Add Rule", new_assessment_marking_scheme_marking_rule_path(@assessment, @marking_scheme, question_id: question.id),
                  class: "bg-blue-500 hover:bg-blue-700 text-white px-3 py-1 rounded text-xs font-medium" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
